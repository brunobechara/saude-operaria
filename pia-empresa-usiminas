  theme_minimal(base_size = 10, base_family = "Times") +
  theme(legend.position = "top", 
        legend.direction = "horizontal",
        plot.title = element_text(size = 10, face = "bold"),
        plot.subtitle = element_text(size = 10),
        axis.title.y = element_text(size = 10, face = "bold", angle = 90),
        axis.title.x = element_text(size = 10, face = "bold"),
        axis.text.x = element_text(angle = 90, size = 10, vjust=0.5),
        axis.text.y = element_text(size = 10, vjust=0.5),
        strip.text = element_text (size = 10, face = "bold")) +
  scale_color_gdocs() + scale_fill_gdocs() +
  scale_x_date(date_breaks = "1 year", date_labels = "%Y") +
  facet_wrap(~Local, scales = "free_y")
ggsave("trab-n-pago-8.jpeg", device = "jpeg", width =16, height =12, units = "cm", dpi = 320, bg = "white")

#Remuneração de capitais no setor siderúrgico e Usiminas entre os anos 2000 e 2022 (cálculos aproximados)
bind_rows(a1,a2) %>% 
  mutate(Ano = as.Date(Ano,"%Y")) %>% 
  ggplot(aes(x = Ano, y = `remuneração de capitais`, color = Local, group = Local)) + #remneração de capitais
  geom_line() + 
  geom_point() +
  labs(x = "",
       y = "",
       color = "") +
  theme_minimal(base_size = 10, base_family = "Times") +
  theme(legend.position = "top", 
        legend.direction = "horizontal",
        plot.title = element_text(size = 10, face = "bold"),
        plot.subtitle = element_text(size = 10),
        axis.title.y = element_text(size = 10, face = "bold", angle = 90),
        axis.title.x = element_text(size = 10, face = "bold"),
        axis.text.x = element_text(angle = 90, size = 10, vjust=0.5),
        axis.text.y = element_text(size = 10, vjust=0.5),
        strip.text = element_text (size = 10, face = "bold")) +
  scale_y_continuous(labels = scales::label_dollar(prefix = "R$ ", big.mark = ".")) +
  scale_color_gdocs() + scale_fill_gdocs() +
  scale_x_date(date_breaks = "1 year", date_labels = "%Y") 
# + facet_wrap(~Local, scales = "free_y") +
ggsave("renumeracao-capitais.jpeg", device = "jpeg", width =16, height =12, units = "cm", dpi = 320, bg = "white")
