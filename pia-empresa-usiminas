#Análise do setor (cálculos aproximados)
tab1 <- bind_cols(tab7241,tab7242,tab7243,tab7244,tab7245) %>% 
  select(-"Classificação Nacional de Atividades Econômicas (CNAE 2.0)...17", -"Número de empresas...18", -Ano...34, -"Classificação Nacional de Atividades Econômicas (CNAE 2.0)...42", -"Número de empresas...43", -Ano...63, -"Classificação Nacional de Atividades Econômicas (CNAE 2.0)...64",-"Número de empresas...65",-Ano...73,-"Classificação Nacional de Atividades Econômicas (CNAE 2.0)...74",-"Número de empresas...75",-Ano...109, -"Receita líquida de vendas - total...40") %>% 
  rename(Ano = Ano...16, "Classificação Nacional de Atividades Econômicas (CNAE 2.0)" = "Classificação Nacional de Atividades Econômicas (CNAE 2.0)...1", "Número de empresas" = "Número de empresas...2", "Receita líquida de vendas - total" = "Receita líquida de vendas - total...66") %>% 
  mutate_if(is.character, str_squish) %>% 
  mutate (Local = "Setor siderúrgico")

tab1[is.na(tab1)] <- 0
  
a1 <- tab1 %>% 
  mutate ("capital variável" = #Capital variável 
            (`Salários, retiradas e outras remunerações de pessoal assalariado ligado à produção` +
            `Salários, retiradas e outras remunerações de pessoal assalariado não-ligado à produção` +
            `Salários, retiradas e outras remunerações de pessoal não-assalariado - proprietários, sócios` +
            `Gastos com pessoal - benefícios concedidos aos empregados` +
            `Gastos com pessoal - indenizações trabalhistas` +
            `Gastos com pessoal - FGTS` +
            `Gastos com pessoal - contribuições para a previdência social` +
            `Gastos com pessoal - contribuições para a previdência privada`)*1000) %>% 
  mutate ("capital constante" = #Capital constante
          (`Compras de matérias-primas, materiais auxiliares e componentes` +
          `Custo das mercadorias adquiridas para revenda` + 
          `Consumo de combustíveis usados para acionar maquinaria` +
          `Compra de energia elétrica utilizada na produção` +
          `Consumo de peças, acessórios e pequenas ferramentas` +
          `Serviços industriais prestados por terceiros` +
          `Serviços de manutenção e reparação de máquinas e equipamentos ligados à produção prestados por terceiros` +
          `Aluguéis e arrendamentos` +
          `Despesas com arrendamento mercantil` +
          `Depreciação, amortização e exaustão` +
          `Despesas com propaganda` +
          `Fretes e carretos` +
          `Impostos e taxas` +
          `Prêmios de seguros` +
          `Variações monetárias passivas` +
          `Despesas financeiras` +
          `Resultados negativos de participações societárias e em sociedade em cota de participação` +
          `Serviços prestados por terceiros` +
          `Despesas com vendas, inclusive comissões` +
          `Água e esgoto` +
          `Viagens e representações` +
          `Demais custos e despesas operacionais` +
          `Despesas não-operacionais` +
          `Royalties e assistência técnica - valor`)*1000) %>% 
  mutate (receitas = #Receitas
            (`Receita bruta de vendas de produtos industriais` +
            `Receita bruta de revenda de mercadorias` +
            `Receita bruta de prestações de serviços não industriais, de transporte e de atividades agropastoris` +
            `Receitas por arrendamento e aluguéis de imóveis e equipamentos` +
            `Receitas financeiras` +
            `Variações monetárias ativas` +
            `Total dos resultados positivos em participações societárias e em sociedades em cota de participação` +
            `Demais receitas operacionais` +
            `Receitas não-operacionais`)*1000) %>% 
  mutate(deduções = #Deduções
           (`Deduções - vendas canceladas` +
           `Deduções - ICMS` +
           `Deduções - Demais impostos` +
           `Deduções - PIS/PASEP`)*1000) %>% 
  select(Ano, Local, "capital constante", "capital variável", receitas, deduções) %>% 
  mutate(`composição orgânica do capital` = `capital constante`/`capital variável`) %>% 
  mutate(maisvalor = receitas - `capital constante` - `capital variável`) %>% 
  mutate(txmaisvalor = maisvalor / `capital variável`) %>% 
  mutate(txlucro = maisvalor / (`capital constante` + `capital variável`)) %>% 
  mutate(trabpago12h = 12 / txmaisvalor) %>% 
  mutate(trabnpago12h = 12 - trabpago12h) %>% 
  mutate(trabpago8h = 8 / txmaisvalor) %>% 
  mutate(trabnpago8h = 8 - trabpago8h) %>% 
  mutate("remuneração de capitais" = maisvalor - deduções)

write_delim(a1, "pia-empresa.csv", delim = ";")

#USIMINAS
#Preparação dos dados
tab2 <- read_xls("Usiminas/Dados/dados-usiminas-valor-adicionado.xls", col_names = TRUE, progress = readxl_progress(), .name_repair = "unique") %>% 
  gather(Ano, Total, -Categorias) %>% 
  spread(Categorias, Total) %>% 
  mutate_if(is.character, str_squish) %>% 
  mutate (Local = "USIMINAS")

tab2[is.na(tab2)] <- 0

#Análise da USIMINAS (cálculos aproximados)
a2 <- tab2 %>% 
  mutate ("capital variável" = #Capital variável 
            (`Salários e encargos` +
            `Encargos previdenciários` +
            `Previdência privada` + 
            `Benefícios` + 
            `Comissão de vendas / outros` + 
            `FGTS` + 
            `Remuneração da Administração` + 
            `Participação dos empregados nos lucros` + 
            `Planos de Aposentadoria`)*1000) %>% 
  mutate ("capital constante" = #Capital constante
            (`Matérias-primas consumidas` + 
            `Custo dos produtos, das mercadorias e dos serviços vendidos` +
            `Materiais, energia, serviços de terceiros e outros` +
            `Recuperação (perda) de valores ativos` +
            `Depreciação, amortização e exaustão`)*1000) %>% 
  mutate (receitas = #Receitas
          (`Venda de mercadorias, produtos e serviços` + 
          `Constituição (reversão) de provisão para créditos de liquidação duvidosa` +
          `Resultado não operacional` +
          `Outras receitas` +
          `Participação no resultado de controladas, controladas em conjunto e coligadas` +
          `Receitas financeiras` +
          `Participação de acionistas minoritários` + 
          `Alugueis e royalties` + 
          `Superávit da Femco`+
          `Receitas cambiais` +
          `Ganhos e perdas atuariais`)*1000) %>% 
  mutate(deduções = #Deduções
           (`Federais` +
           `Estaduais` + 
           `Municipais` + 
           `Incentivos fiscais`)*1000) %>% 
  select(Ano, Local, "capital constante", "capital variável", receitas, deduções) %>% 
  mutate(`composição orgânica do capital` = `capital constante`/`capital variável`) %>% 
  mutate(maisvalor = receitas - `capital constante` - `capital variável`) %>% 
  mutate(txmaisvalor = maisvalor / `capital variável`) %>% 
  mutate(txlucro = maisvalor / (`capital constante` + `capital variável`)) %>% 
  mutate(trabpago12h = 12 / txmaisvalor) %>% 
  mutate(trabnpago12h = 12 - trabpago12h) %>% 
  mutate(trabpago8h = 8 / txmaisvalor) %>% 
  mutate(trabnpago8h = 8 - trabpago8h) %>% 
  mutate("remuneração de capitais" = maisvalor - deduções)

write_delim(a2, "usiminas.csv", delim = ";")

